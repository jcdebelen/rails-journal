
<h1 class="display-6">Tasks</h1>
<div id="tasks">
<br>
  <div class="container d-flex justify-content-evenly flex-wrap">
  <% @tasks.each do |task| %>
    <% @categories.each do |category| %>
      <% if task.category_id == category.id %>
        <div class="card bg-light mb-3 ms-2" style="width: 250px;">
          <%= render task %>
        </div>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
<br>
<%= link_to "New task", new_task_path, class:"btn btn-outline-primary" %>

