
<div class="container" style="width: 400px">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.submit "Log in", class:"actions w-100 btn btn-lg btn-primary actions mt-3" %>
<% end %>

<p class="text-center mt-2"><%= link_to "Forgot password?", new_user_password_path, method: :delete, class:"text-decoration-none" %></p>
